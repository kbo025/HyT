<div class='nvc-container'>
    <h2>
        <i class='fa fn-bag' ></i>
        {{"aavv.step1.company_data"|trans }}
    </h2>
    <br />
    <div class="row">
        <div class='col-md-5'>
            <div class='nvc-form-group'>
                <label for='d1'>{{"aavv.step1.business_name"|trans }}</label>
                <input
                    class='nvc-input__register'
                    id='d1'
                    placeholder=''
                    type="text"
                    name="company_name"
                    ng-model="form.company_name"
                />
            </div>
            <span ng-if="form.company_name === null && validation === true" style="color:red;">
                <strong class="error">{{"share.validation.input_required"|trans }}</strong>
                <br>
            </span>
        </div>
        <div class='col-md-3'>
            <div class='nvc-form-group'>
                <label for='file-rif'>{{"aavv.step1.rif"|trans }}</label>
                <input
                        class='nvc-input__register'
                        id='file-rif'
                        placeholder=''
                        type="file"
                        ngf-select
                        name="rif_document"
                        ng-model="files.rif_document"
                        ng-change="loadFile('file-rif')"
                />
                <input
                        class='nvc-input__register'
                        id='file-rifText'
                        placeholder=''
                        type="text"
                        name="rif_documentForm"
                        ng-model="rif_document"
                        disabled
                        style ="width: 50%"
                />
                <button
                        class='nvc-button nvc-button__default'
                        ng-click="onClick('file-rif')"
                >
                    {{"aavv.step1.attach"|trans }}
                </button>
            </div>
            <span ng-if="files.rif_document === null && validation === true" style="color:red;">
                <strong class="error">{{"share.validation.input_required"|trans }}</strong>
                <br>
            </span>
        </div>
        <div class='col-md-3'>
            <div class='nvc-form-group'>
                <label for='d3'>{{"aavv.step1.phone"|trans }}</label>
                <input
                    class='nvc-input__register'
                    id='d3'
                    placeholder=''
                    type='text'
                    name="phone"
                    ng-focus="formStep1.phone.$setUntouched()"
                    ng-model="form.phone"
                    ng-pattern="/^[0-9]{11}$|^(\+|00)(9[976]\d|8[987530]\d|6[987]\d|5[90]\d|42\d|3[875]\d|2[98654321]\d|9[8543210]|8[6421]|6[6543210]|5[87654321]|4[987654310]|3[9643210]|2[70]|7|1)\d{1,14}$/"
                />
            </div>
            <span ng-if="form.phone === null && validation === true" style="color:red;">
                <strong class="error">{{"share.validation.input_required"|trans }}</strong>
                <br>
            </span>
            <span   ng-show="formStep1.phone.$error.pattern && formStep1.phone.$touched"
                    style="color:red;"
            >
                <strong class="error">{{ "share.validation.error_phone_lg"|trans }}</strong>
                <br>
            </span>
        </div>
        <div class='col-md-5'>
            <div class='nvc-form-group'>
                <label for='d4'>{{"aavv.step1.email"|trans }}</label>
                <input
                    class='nvc-input__register'
                    id='d4'
                    placeholder=''
                    type='email'
                    ng-focus="formStep1.company_email.$setUntouched()"
                    name="company_email"
                    ng-model="form.company_email"
                />
            </div>
            <span
                class="error"
                ng-show="formStep1.company_email.$error.email
                && formStep1.company_email.$touched">
                {{ "share.validation.error_email"|trans }}
            </span>
            <span ng-if="form.company_email === null && validation === true" style="color:red;">
                <strong class="error">{{"share.validation.input_required"|trans }}</strong>
                <br>
            </span>
        </div>
    </div>
