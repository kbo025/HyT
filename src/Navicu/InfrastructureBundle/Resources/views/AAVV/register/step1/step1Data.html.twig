    <div class="row">
        <div class='col-md-5'>
            <div class='nvc-form-group'>
                <label for='l5'>{{"aavv.step1.commercial_name"|trans }}</label>
                <input
                    class='nvc-input__register'
                    id='l5'
                    placeholder=''
                    type='text'
                    name="commercial_name"
                    ng-model="form.commercial_name"
                />
            </div>
            <span ng-if="form.commercial_name === null && validation === true" style="color:red;">
                <strong class="error">{{"share.validation.input_required"|trans }}</strong>
                <br>
            </span>
        </div>
        <div class='col-md-3'>
            <div class='nvc-form-group'>
                <label for='l6'>{{"aavv.step1.opening_year"|trans }}</label>
                <select
                    class='nvc-select__register'
                    id='l6'
                    placeholder=''
                    name="opening_year"
                    ng-options="n for n in [] | range:1900:2016 | reverse"
                    ng-model="form.opening_year"
                >
                </select>
            </div>
            <span ng-if="form.opening_year === null && validation === true" style="color:red;">
                <strong class="error">{{"share.validation.input_required"|trans }}</strong>
                <br>
            </span>
        </div>
    </div>
    <div class='col-md-16'>
        <hr />
    </div>
    <div class='col-md-4'>
        <div class='nvc-form-group'>
            <label for='d7'>{{"aavv.step1.country"|trans }}</label>
            <select
                class='nvc-select__register'
                id='d7'
                placeholder=''
                name="country"
                ng-model="form.country"
                ng-options="val.id as val.name for (country, val) in locations"
                ng-change="changeCountry()"
            >
                <option value="">{{"aavv.step1.select"|trans }}</option>
            </select>
        </div>
        <span ng-if="form.country === null && validation === true" style="color:red;">
            <strong class="error">{{"share.validation.input_required"|trans }}</strong>
            <br>
        </span>
    </div>
    <div class='col-md-3'>
        <div class='nvc-form-group'>
            <label for='d8'>{{"aavv.step1.state"|trans }}</label>
            <select
                class='nvc-select__register'
                id='d8'
                placeholder=''
                name="state"
                ng-disabled="form.country != 1"
                ng-model="form.state"
                ng-options="val.id as val.name for (state, val) in states"
                ng-change="changeState()"
            >
                <option value="">{{"aavv.step1.select"|trans }}</option>
            </select>
        </div>
        <span ng-if="form.state === null && validation === true && form.country == 1" style="color:red;">
            <strong class="error">{{"share.validation.input_required"|trans }}</strong>
            <br>
        </span>
    </div>
    <div class='col-md-3'>
        <div class='nvc-form-group'>
            <label for='d9'>{{"aavv.step1.city"|trans }}</label>
            <select
                class='nvc-select__register'
                id='d9'
                placeholder=''
                name="city"
                ng-disabled="!form.state"
                ng-model="form.city"
                ng-options="val.id as val.name for (city, val) in cities"
                ng-change="changeCity()"
            >
                <option value="">{{"aavv.step1.select"|trans }}</option>
            </select>
        </div>
        <span ng-if="form.city === null && validation === true && form.country == 1" style="color:red;">
            <strong class="error">{{"share.validation.input_required"|trans }}</strong>
            <br>
        </span>
    </div>
    <div class='col-md-3'>
        <div class='nvc-form-group'>
            <label for='d10'>{{"aavv.step1.parish"|trans }}</label>
            <select
                class='nvc-select__register'
                id='d10'
                placeholder=''
                name="parish"
                ng-disabled="!form.city"
                ng-model="form.parish"
                ng-options="val.id as val.name for (parish, val) in parishes"
                ng-change="changeParish()"
            >
                <option value="">{{"aavv.step1.select"|trans }}</option>
            </select>
        </div>
        <span ng-if="form.parish === null && validation === true && form.country == 1" style="color:red;">
            <strong class="error">{{"share.validation.input_required"|trans }}</strong>
            <br>
        </span>
    </div>
    <div class='col-md-3'>
        <div class='nvc-form-group'>
            <label for='d11'>{{"aavv.step1.zip"|trans }}</label>
            <input
                class='nvc-input__register'
                id='d11'
                placeholder=''
                type='text'
                name="zip"
                ng-model="form.zip"
                ng-min="1"
            />
        </div>
        <span ng-show="formStep1.zip.$error.number" style="color:red;">
            <strong class="error">{{"share.validation.only_number"|trans }}</strong>
            <br>
        </span>
        <span ng-show="formStep1.zip.$error.min" style="color:red;">
            <strong class="error">{{"share.validation.enter_more_one"|trans }}</strong>
            <br>
        </span>
        <span ng-if="form.zip === null && validation === true" style="color:red;">
            <strong class="error">{{"share.validation.input_required"|trans }}</strong>
            <br>
        </span>
    </div>
    <div class='col-md-8'>
        <div class='nvc-form-group'>
            <label for='d12'>{{"aavv.step1.address"|trans }}</label>
            <input
                class='nvc-input__register'
                id='d12'
                placeholder=''
                type='text'
                name="address"
                ng-disabled="!form.parish"
                ng-model="form.address"
            />
        </div>
        <span ng-if="form.address === null && validation === true && form.country == 1" style="color:red;">
            <strong class="error">{{"share.validation.input_required"|trans }}</strong>
            <br>
        </span>
    </div>
</div>
