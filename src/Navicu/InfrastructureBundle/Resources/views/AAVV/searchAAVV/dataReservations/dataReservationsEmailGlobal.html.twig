<div class="col-md-5 col-lg-6">
	<div ng-if="dataReservations.personalizedMail" class="email">
		<div class="checkbox">
			<span>
				<input
					ng-disabled="!VIEW_PERMISSIONS.EDIT"
					ng-init="dataReservations.sendEmail = false"
					ng-model="dataReservations.sendEmail"
					type="checkbox"
				>
				Enviar correo de confirmación a todos los huéspedes
			</span>
		</div>
	</div>
</div>
<div class="col-md-5 col-lg-4 sizeTolalGlobal">
	<div class="bestPrice">
		<h4>¡Mejor precio garantizado!</h4>
		<img src="{{ asset('images/preciogarantizado.png') }}">
	</div>
</div>
<div class="col-md-3 col-lg-3 totalGlobal">
	<h1>Subtotal &nbsp;&nbsp; Bs {[{dataReservations.totalBilling - dataReservations.IVA | number}]}</h1>
	<h1>IVA &nbsp;&nbsp; Bs {[{dataReservations.IVA | number}]}</h1>
	<h1>Total Bs {[{dataReservations.totalBilling | number}]}</h1>
</div>
<div class="col-md-3 col-lg-3">
	<button
		class='nvc-button nvc-button__search--aavv nvc-aavv-customize__button--primary'
		type="submit"
		ng-disabled="!VIEW_PERMISSIONS.EDIT"
		ng-click="sendData()">
                    {[{ reservationType == 0 ? "Bloquear 24h" : "Reservar" }]}
    </button>
</div>
