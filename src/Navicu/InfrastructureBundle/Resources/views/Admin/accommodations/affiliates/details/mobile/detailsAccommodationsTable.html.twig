
<div ng-repeat="value in reservation">
    <div class="title" ng-class="{'colorTitleTwo': $index % 2 != 0}" ng-click="open = !open">
        <div class="col-xs-8 separatorTitle">
            <h2>
                {[{ value.full_name }]}
            </h2>
        </div>
        <div class="col-xs-8">
            <h2>
                {[{ value.public_id }]}
            </h2>
        </div>
    </div>
    <div class="content" ng-if="open">
        <div class="mainInfo">
            <div class="col-xs-8 separatorOne">
                <h2>
                    {{ 'word.checkin'|trans }}
                </h2>
            </div>
            <div class="col-xs-8">
                <h2>
                    {{ 'word.checkout'|trans }}
                </h2>
            </div>
        </div>
        <div class="info">
            <div class="col-xs-8 separatorTwo">
                <h2>
                    {[{ value.date_check_in }]}
                </h2>
            </div>
            <div class="col-xs-8">
                <h2>
                    {[{ value.date_check_out}]}
                </h2>
            </div>
        </div>
        <div class="type">
            <div class="col-xs-16">
                <h2>{{ 'message.room_number'|trans }}</h2>
            </div>
        </div>
        <div class="info">
            <div class="col-xs-16">
                <h2>{[{value.number_rooms}]}</h2>
            </div>
        </div>
        <div class="mainInfo">
            <div class="col-xs-8 separatorOne">
                <h2>
                    {{ 'word.billing'|trans }}
                </h2>
            </div>
            <div class="col-xs-8">
                <h2>
                    {{ 'message.net_billing'|trans }}
                </h2>
            </div>
        </div>
        <div class="info">
            <div class="col-xs-8 separatorTwo">
                <h2>
                    {[{value.net_rate| number}]}
                </h2>
            </div>
            <div class="col-xs-8">
                <h2>
                    {[{value.total_to_pay| number}]}
                </h2>
            </div>
        </div>
        <div class="type">
            <div class="col-xs-16">
                <h2>{{ 'word.state'|transchoice(1) }}</h2>
            </div>
        </div>
        <div class="info">
            <div class="col-xs-16">
                <h2>{[{ value.status }]}</h2>
            </div>
        </div>
        <div class="buttonDetails">
            <button
                class="form-control nvc-admin nvc-button__login"
                ng-click=""
            >
                Ver detalle
            </button>
        </div>
    </div>
</div>
