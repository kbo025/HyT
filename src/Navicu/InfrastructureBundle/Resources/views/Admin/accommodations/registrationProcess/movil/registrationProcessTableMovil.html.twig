<div ng-repeat="property in properties">
    
    <div class="title" ng-class="{'colorTitleTwo': $index % 2 != 0}" ng-click="open = !open">
        <div class="col-xs-16">
            <h2 ng-if="property.name != null">
                {[{ property.name }]}
            </h2>
            <h2 ng-if="property.name == null">
                No disponible
            </h2>
        </div>
    </div>
    <div class="content" ng-if="open">
        <div class="mainInfo">
            <div class="col-xs-8 separatorOne">
                <h2>
                    Inicio de registro
                </h2>
            </div>
            <div class="col-xs-8">
                <h2>
                    Tipo
                </h2>
            </div>
        </div>
        <div class="info">
            <div class="col-xs-8 separatorTwo">
                <h2>
                    {[{ property.expired_date }]}
                </h2>
            </div>
            <div class="col-xs-8">
                <h2 ng-if="property.accommodation_title == null">No disponible</h2>
                <h2 ng-if="property.accommodation_title != null">
                    {[{ property.accommodation_title }]}
                </h2>
            </div>
        </div>
        <div class="type">
            <div class="col-xs-16">
                <h2>Ciudad</h2>
            </div>
        </div>
        <div class="info">
            <div class="col-xs-16">
                <h2 ng-if="property.property.location != null">{[{ property.location }]}</h2>
                <h2 ng-if="property.property.location == null">No disponible</h2>
            </div>
        </div>
        <div class="mainInfo">
            <div class="col-xs-8 separatorOne">
                <h2>
                    Contacto
                </h2>
            </div>
            <div class="col-xs-8">
                <h2>
                    Tel√©fono
                </h2>
            </div>
        </div>
        <div class="info">
            <div class="col-xs-8 separatorTwo">
                <h2 ng-if="property.contact_name != null">{[{ property.contact_name }]}</h2>
                <h2 ng-if="property.contact_name == null">No disponible</h2>
            </div>
            <div class="col-xs-8">
                <h2 ng-if="property.property.phones != null">{[{ property.phones}]}</h2>
                <h2 ng-if="property.property.phones == null">No disponible</h2>
            </div>
        </div>
        <div class="type">
            <div class="col-xs-16">
                <h2>Completado</h2>
            </div>
        </div>
        <div class="info">
            <div class="col-xs-16">
                <h2>{[{ property.progress }]}%</h2>
            </div>
        </div>
        <div class="type">
            <div class="col-xs-16">
                <h2>Ejecutivo</h2>
            </div>
        </div>
        <div>
            <select
                class="form-control"
                ng-model="property.commercial"
                ng-change="setCommercial($index, property.commercial)"
                ng-options="item as item.name for item in commercials track by item.id"
            >
            <option value=""> No asignado</option>
            </select>
        </div>
        <div class="buttonDetails">
            <button
                class="form-control nvc-admin nvc-button__login buttonEdit"
                ng-click="redirectRegister(property.username)"
            >
                Editar
            </button>
            <button
                class="form-control nvc-admin nvc-button__login buttonEdit"
                ng-click="showModalDeleteProperty(property.name, property.id)"
            >
                Borrar
            </button>
            
            <button
                class="form-control nvc-admin nvc-button__login buttonEditAlta"
                ng-click="showModalReleaseProperty(property.name, property.username)"
                ng-show="({{ (hasPermission('admin_temporals', 'to_register')) }} && property.progress == 100)"
            >
                Alta
            </button>
        </div>
    </div>
</div>
