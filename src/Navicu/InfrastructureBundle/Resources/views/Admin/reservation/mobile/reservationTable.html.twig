<div ng-repeat="reservation in reservations">
    <div
        class="title clearfix"
        ng-class="{'colorTitleTwo': $index % 2 != 0}"
        ng-click="open = !open; fixSelects()"
    >
        <div class="col-xs-8 separatorTitle">
            <h2>
                {[{ reservation.client_name }]}
            </h2>
        </div>

        <div class="col-xs-8">
            <h2>
                {[{ reservation.public_id }]}
            </h2>
        </div>
    </div>

    <div class="content" ng-if="open">
        <div ng-if="selectedTab === STATUS_ALL">
            {% include "NavicuInfrastructureBundle:Admin:reservation/mobile/reservationTableAll.html.twig" %}
        </div>
        <div ng-if="selectedTab === STATUS_PRE">
            {% include "NavicuInfrastructureBundle:Admin:reservation/mobile/reservationTablePre.html.twig" %}
        </div>
        <div ng-if="selectedTab === STATUS_PENDING">
            {% include "NavicuInfrastructureBundle:Admin:reservation/mobile/reservationTablePending.html.twig" %}
        </div>
        <div ng-if="selectedTab === STATUS_ACCEPTED">
            {% include "NavicuInfrastructureBundle:Admin:reservation/mobile/reservationTableAccepted.html.twig" %}
        </div>
        <div ng-if="selectedTab === STATUS_CANCELLED">
            {% include "NavicuInfrastructureBundle:Admin:reservation/mobile/reservationTableCancelled.html.twig" %}
        </div>

        <div class="buttonDetails">
            <button class="form-control nvc-admin nvc-button__login">
                Ver detalle
            </button>
        </div>

        <div ng-if="selectedTab === STATUS_PENDING">
            {% include "NavicuInfrastructureBundle:Admin:reservation/mobile/reservationTablePendingPayments.html.twig" %}
        </div>
    </div>
</div>
