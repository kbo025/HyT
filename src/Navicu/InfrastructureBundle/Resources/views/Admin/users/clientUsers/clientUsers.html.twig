{% extends "NavicuInfrastructureBundle:Admin:layout.html.twig" %}

{% block content %}
    <div
        ng-controller="UsersCtrl"
        ng-cloak
    >
        {# Versión desktop #}
        <main
            class="admin nvc-admin__AAVVInvoiceList visible-md visible-lg"
        >
            <div>
                {% include "NavicuInfrastructureBundle:Admin:users/topMenuUsers.html.twig" %}
                <div class="nvc-secondaryTableHeader--admin">
                    {% include "NavicuInfrastructureBundle:Admin:users/clientUsers/clientUsersHeader.html.twig" %}
                </div>
                <div class="nvc-table--admin nvc-container">
                    {% include "NavicuInfrastructureBundle:Admin:users/clientUsers/clientUsersTable.html.twig" %}
                </div>
                <div ng-if="pagination.pages > 1">
                    {% include "NavicuInfrastructureBundle:Admin:users/clientUsers/clientUsersPagination.html.twig" %}
                </div>
            </div>
        </main>

        {# Versión movil #}
        <main
            class="admin nvc-admin__AAVVInvoiceList visible-sm visible-xs"
        >
            <div class="nvc-secondaryTableHeader--admin--movil">
                <div class="col-xs-16 col-sm-16">
                    {% include "NavicuInfrastructureBundle:Admin:users/clientUsers/movil/clientUsersHeaderMovil.html.twig" %}
                </div>
            </div>
            <div class="col-xs-16 col-sm-16 nvc-table--admin--movil">
                {% include "NavicuInfrastructureBundle:Admin:users/clientUsers/movil/clientUsersTableMovil.html.twig" %}
            </div>
            <div ng-if="pagination.pages > 1">
                {% include "NavicuInfrastructureBundle:Admin:users/clientUsers/clientUsersPagination.html.twig" %}
            </div>
        </main>
         {{ include("NavicuInfrastructureBundle:Admin:users/clientUsers/modalActivationAdvance.html.twig") }}
    </div>

{% endblock content %}

{% block scripts %}
    {{ parent() }}
{% endblock %}
