                        <button
                            type="submit"
                            class="nvc-button nvc-button__search"
                            ng-click="sendData()">Guardar
                        </button>
                    </div>
                </div>
            </main>

            {# Versión movil #}
            <main
                class="admin nvc-admin--user nvc-admin--user--movil visible-xs visible-sm"
            >
                <div>
                    <div>
                        {% include "NavicuInfrastructureBundle:Admin:users/newUser/newUserHeader.html.twig" %}
                    </div>
                    <div class="nvc-container">
                        {% include "NavicuInfrastructureBundle:Admin:users/newUser/movil/newUserDataMovil.html.twig" %}
                    </div>
                    <div>
                    </div>
                </div>
            </main>
        </form>
