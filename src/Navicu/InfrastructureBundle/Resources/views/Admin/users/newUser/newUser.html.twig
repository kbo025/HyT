{% extends "NavicuInfrastructureBundle:Admin:layout.html.twig" %}

{% block content %}
    <div
        ng-controller="UserNewEditCtrl"
        ng-cloak
    >
        <form name="userNavicuForm"class="nvc-form-inline"novalidate>
            {# Versión desktop #}
            <main
                class="nvc-admin--user visible-md visible-lg"
            >
                <div>
                    {% include "NavicuInfrastructureBundle:Admin:users/topMenuUsers.html.twig" %}
                    <div>
                        {% include "NavicuInfrastructureBundle:Admin:users/newUser/newUserHeader.html.twig" %}
                    </div>
                    <div class="nvc-container">
                        {% include "NavicuInfrastructureBundle:Admin:users/newUser/newUserData.html.twig" %}
                    </div>
