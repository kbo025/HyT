<script id="modal-error.tpl" type="text/ng-template">
    <div
        class="modal"
        role="dialog"
        tabindex="-1"
    >
        <div class="modal-dialog modal-pad centered-modal">
            <div class="modal-header modal-header2">
                <button
                    aria-hidden="true"
                    class="close close2"
                    data-dismiss="modal"
                    ng-click="$hide()"
                    type="button"
                >
                    ×
                </button>

                <h3
                    class="font-sidebar-tittle"
                    style="color: white;"
                >
                    <i class="fa fa-exclamation-triangle"></i>
                    <span style="padding-left: 10px;">Error!</span>
                 </h3>
            </div>

            <div
                class="modal-content text-center"
                ng-if="!errorMessage"
            >
                ¡Ha ocurrido algo inesperado!
            </div>

            <div
                class="modal-content text-center"
                ng-if="errorMessage"
            >
                {[{ errorMessage }]}
            </div>
        </div>
    </div>
</script>
