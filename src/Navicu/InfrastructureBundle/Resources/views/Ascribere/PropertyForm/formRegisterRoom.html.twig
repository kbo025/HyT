{% extends "NavicuInfrastructureBundle:Ascribere:layoutRegister.html.twig" %}

{% set header_title = {'module_title': '3'} %}

{% block body %}
<!--Iconos del formulario -->
<div
	ng-app="roomModule"
	ng-controller="roomController"
	novalidate
	ng-cloak>
	{% include "NavicuInfrastructureBundle:Ascribere:PropertyForm/topmenu.html.twig" with header_title %}
	<!--Top del formualario -->
	<div class="container" style="font-family:LatoRegular" >
		<div class="col-md-16" style="color:#572A85">
			<p align="justify">{{"share.register.information_room"|trans }}</p>
		</div>
	</div>
	<br>
	<form name="formRoom">
		<!--Habitacion-->
		<div class="container form-font" >
			<div class="jumbotron form-font-top form-group ">
				<div class="container form-font">
					<div class="col-md-6 right">
						<h3>{{"share.message.room"|transchoice(1) }} </h3>
					</div>
					<div class="col-md-8"></div>
					<div class="col-md-2 left"></div>
				</div>
				<br>
				<div class="container" style="color:#808080">
					<div class="col-md-6 col-lg-7">
						<label for="">{{"share.register.room_type"|trans }}*</label>
						<select
							class="form-control my-select"
							name="availability"
							style="width:100%"
							ng-model="room.typeRoom"
							ng-options="typeRoom as val.name for (typeRoom, val) in rooms.TypeRoom"
							required>
							<option value=''>{{"share.register.select"|trans }}</option>
						</select>
					</div>
					<div
						class="col-md-6 col-lg-5"
						ng-class="{'has-error' : formRoom.availability1.$invalid}">
						<label class="tooltips tooltips-right" for="">
							{{"share.register.room_number"|trans }}*
							<i class="fa fn-info fa-x"></i>
							<span style="width: 100% !important;margin-left: 30px !important;">
								{{"share.register.room_number_tooltip"|trans }}
							</span>
						</label>
						<input
							type="number"
							name="availability1"
							ng-model="room.numRooms"
							class="form-control my-imput"
							ng-pattern="/^\d+$/"
							style="width:50%;"
							ng-min="1"
							required/>
						<span ng-show="formRoom.availability1.$error.number" style="color:red;">
                            <strong class="error">{{"share.validation.only_number"|trans }}</strong>
                            <br>
                        </span>
                        <span ng-show="formRoom.availability1.$error.min" style="color:red;">
                            <strong class="error">{{"share.validation.enter_more_one"|trans }}</strong>
                            <br>
                        </span>
                        <span ng-show="formRoom.availability1.$error.pattern" style="color:red;">
                            <strong class="error">{{"share.validation.only_integer"|trans }}</strong>
                        	<br>
                        </span>
                        <span ng-show="formRoom.availability1.$error.required" style="color:red;">
                            <strong class="error">{{"share.validation.input_required"|trans }}</strong>
                        	<br>
                        </span>
					</div>
					<div class="col-md-4">
						<label for="">{{"share.register.smoking"|trans }}</label>
						<br>
						<md-switch
							ng-model="room.smoking"
							aria-label="Switch 1"
							class="md-warn">
							<span ng-if="room.smoking == true">
								{{ "share.message.yes"|trans }}
							</span>
							<span ng-if="room.smoking == null || room.smoking == false">
								{{ "share.message.no"|trans }}
							</span>
						</md-switch>
					</div>
					<div class="col-md-6 col-lg-7">
						<label for="">{{"share.register.room_view"|trans }}</label>
						<select
							ng-disabled="!room.typeRoom"
							class="form-control my-select"
							style="width:100%"
							ng-model="room.subroom"
							ng-options="subroom.id as subroom.name for (index, subroom) in rooms.TypeRoom[room.typeRoom].subtypes">
							<option value=''>{{"share.register.select"|trans }}</option>
						</select>
					</div>
					<div class="col-md-6 col-lg-5" ng-hide="room.category==2 || room.category==3">
						<label class="tooltips tooltips-right">
							{{"share.register.typologies_bed"|trans }}
							<i class="fa fn-info fa-x"></i>
							<span style="width: 100% !important;margin-left: 30px !important;">
								{{"share.tooltip.typologies_bed"|trans }}
							</span>
						</label>
						<select
							ng-disabled="!room.typeRoom"
							class="form-control my-select"
							style="width:50%"
							ng-options="n for n in [] | range:1:10"
							ng-model="room.numBedroom" >
						</select>
					</div>
					<div class="col-md-6 col-lg-5" ng-hide="!room.typeRoom || room.category==1">
						<label class="tooltips tooltips-right">
							{{"share.register.typologies_bedroom"|trans }}
							<i class="fa fn-info fa-x"></i>
							<span style="width: 100% !important;margin-left: 30px !important;">
								{{"share.tooltip.typologies_bedroom"|trans }}
							</span>
						</label>
						<select
							class="form-control my-select"
							style="width:50%"
							ng-model="room.numBedroom"
							ng-options="n for n in [] | range:1:10">
						</select>
					</div>
					<div class="col-md-4" ng-class="{'has-error' : formRoom.availability2.$invalid}">
						<label for="">{{"share.register.room_size"|trans }}</label>
						<div class="input-group">
							<input
								type="number"
								name="availability2"
								ng-model="room.sizeRoom"
								class="form-control my-imput"
								style="width:100%;"
								ng-min="0"/>
                            <span class="input-group-addon color-money" id="basic-addon1">
                            	{{"share.register.meters"|trans }} <span><sup>2</sup></span>
                            </span>
						</div>
					  	<span ng-show="formRoom.availability2.$error.number" style="color:red;">
                            <strong class="error">{{"share.validation.only_number"|trans }}</strong>
                            <br>
                        </span>
                        <span ng-show="formRoom.availability2.$error.min">
                            <strong class="error">{{"share.validation.enter_more_one"|trans }}</strong>
                            <br>
                        </span>
					</div>
				</div>
				<br>
				<div class="container" style="color:#808080">
					<div class="col-md-16" style="margin-bottom:15px;">
						<div class="col-md-2">
							<label for="">{{"share.register.bath"|transchoice(2) }} </label>
							<select
								class="form-control my-select"
								style="width:100%"
								ng-model="room.bath"
								ng-options="n for n in [] | range:0:10">
							</select>
						</div>
						<div class="col-md-2">
							<label for="">{{"share.register.balcony"|trans }}</label>
							<br>
							<md-switch
								ng-model="room.balcony"
								aria-label="Switch 2"
								class="md-warn">
								<span ng-if="room.balcony == true">
									{{ "share.message.yes"|trans }}
								</span>
								<span ng-if="room.balcony == null || room.balcony == false">
									{{ "share.message.no"|trans }}
								</span>
							</md-switch>
						</div>
						<div class="col-md-2">
							<label for="">{{"share.register.terrace"|trans }}</label>
							<br>
							<md-switch
								ng-model="room.terrace"
								aria-label="Switch 3"
								class="md-warn">
								<span ng-if="room.terrace == true">
									{{ "share.message.yes"|trans }}
								</span>
								<span ng-if="room.terrace == null || room.terrace == false">
									{{ "share.message.no"|trans }}
								</span>
							</md-switch>
						</div>
						<div class="col-md-1"	>
							<label for=""></label>
						</div>
						<div class="col-md-3 col-lg-2" ng-if="room.typeRoom && room.category!=1">
							<label for="">{{"share.register.livings"|trans }}</label>
								<select
									class="form-control my-select"
									style="width:100%"
									ng-options="n for n in [] | range:0:10"
									ng-model="room.numLiving">
								</select>
						</div>
						<div class="col-md-2" ng-if="room.category==3 || room.category==2">
							<label for="">{{"share.register.dresser"|trans }}</label>
							<select
								class="form-control my-select"
								style="width:100%"
								ng-options="n for n in [] | range:0:10"
								ng-model="room.dresser">
							</select>
						</div>
						<div class="col-md-2" ng-if="room.category==3 || room.category==2">
							<label for="">{{"share.register.diner"|trans }}</label>
							<select
								class="form-control my-select"
								style="width:100%"
								ng-options="n for n in [] | range:0:10"
								ng-model="room.diner">
							</select>
						</div>
						<div class="col-md-2" ng-if="room.category==3 || room.category==2">
							<label for="">{{"share.register.cooking"|trans }}</label>
							<br>
							<md-switch
								ng-model="room.cooking"
								aria-label="Switch 4"
								class="md-warn">
								<span ng-if="room.cooking == true">
									{{ "share.message.yes"|trans }}
								</span>
								<span ng-if="room.cooking == null || room.cooking == false">
									{{ "share.message.no"|trans }}
								</span>
							</md-switch>
						</div>
					</div>

					<div
						class="col-md-16"
						style="margin-bottom:15px;"
						ng-class="{'has-error' : formRoom.availability3.$invalid}">
						<div class="col-md-6 col-lg-7">
							<label for="">{{"share.register.num_people"|trans }}</label>
							<input
								type="number"
								name="availability3"
								style="width:50%;"
								class="form-control my-imput"
								ng-model="room.numPeople"
								ng-min="1"
								ng-pattern="/^\d+$/"
								required/>
						  	<span ng-show="formRoom.availability3.$error.number" style="color:red;">
                                <strong class="error">{{"share.validation.only_number"|trans }}</strong>
                                <br>
                            </span>
                            <span ng-show="formRoom.availability3.$error.min" style="color:red;">
                                <strong class="error">{{"share.validation.enter_more_one"|trans }}</strong>
                                <br>
                            </span>
                            <span ng-show="formRoom.availability1.$error.pattern" style="color:red;">
	                            <strong class="error">{{"share.validation.only_integer"|trans }}</strong>
	                        	<br>
                       	 	</span>
                            <span ng-show="formRoom.availability3.$error.required" style="color:red;">
	                            <strong class="error">{{"share.validation.input_required"|trans }}</strong>
	                        	<br>
                            </span>
						</div>
						<div class="col-md-2" ng-if="room.category==3">
							<label for="">{{"share.register.spa"|trans }}</label>
							<br>
							<md-switch
								ng-model="room.spa"
								aria-label="Switch 5"
								class="md-warn">
								<span ng-if="room.spa == true">
									{{ "share.message.yes"|trans }}
								</span>
								<span ng-if="room.spa == null || room.spa == false">
									{{ "share.message.no"|trans }}
								</span>
							</md-switch>
						</div>
						<div class="col-md-2" ng-if="room.category==3">
							<label for="">{{"share.register.pool"|trans }}</label>
							<br>
							<md-switch
								ng-model="room.pool"
								aria-label="Switch 6"
								class="md-warn">
								<span ng-if="room.pool == true">
									{{ "share.message.yes"|trans }}
								</span>
								<span ng-if="room.pool == null || room.pool == false">
									{{ "share.message.no"|trans }}
								</span>
							</md-switch>
						</div>
						<div class="col-md-3 col-lg-2" ng-if="room.category==3">
							<label for="">{{"share.register.garden"|trans }}</label>
							<br>
							<md-switch
								ng-model="room.garden"
								aria-label="Switch 7"
								class="md-warn">
								<span ng-if="room.garden == true">
									{{ "share.message.yes"|trans }}
								</span>
								<span ng-if="room.garden == null || room.garden == false">
									{{ "share.message.no"|trans }}
								</span>
							</md-switch>
						</div>
						<div class="col-md-3 col-lg-2" ng-if="room.category==3">
							<label for="">{{"share.register.laundry"|trans }}</label>
							<br>
							<md-switch
								ng-model="room.laundry"
								aria-label="Switch 8"
								class="md-warn">
								<span ng-if="room.laundry == true">
									{{ "share.message.yes"|trans }}
								</span>
								<span ng-if="room.laundry == null || room.laundry == false">
									{{ "share.message.no"|trans }}
								</span>
							</md-switch>
						</div>
					</div>
                    <div
                    	class="col-md-16"
                    	style="margin-bottom:15px;"
                    >

                        <div
                            class="col-md-6 col-lg-6"
                            ng-class="{'has-error' : formRoom.minPeople.$invalid && formRoom.minPeople.$touched}"
                        >
                            <label class="tooltips tooltips-right" for="">
                                Minímo de personas permitidas por habitación
                            </label>
                            <input
                                type="number"
                                name="minPeople"
                                style="width:50%;"
                                class="form-control my-imput"
                                ng-focus="formRoom.minPeople.$setUntouched()"
                                ng-model="room.minPeople"
                                min="1"
                                ng-max="{[{ room.numPeople }]}"
                                ng-pattern="/^\d+$/"
                                required
                           />
                            <span ng-show="formRoom.minPeople.$error.number" style="color:red;">
                                <strong class="error">{{"share.validation.only_number"|trans }}</strong>
                                <br>
                            </span>
                            <span ng-show="formRoom.minPeople.$error.min" style="color:red;">
                                <strong class="error">{{"share.validation.enter_more_one"|trans }}</strong>
                                <br>
                            </span>
                            <span ng-show="formRoom.minPeople.$error.pattern" style="color:red;">
                                <strong class="error">{{"share.validation.only_integer"|trans }}</strong>
                                <br>
                            </span>
                            <span ng-show="formRoom.minPeople.$error.max" style="color:red;">
                                <strong class="error">
                                    No debe ser mayor al número de personas permitidas
                                </strong>
                                <br>
                            </span>
                            <span
                                ng-show="formRoom.minPeople.$error.required
                                        && formRoom.minPeople.$touched"
                                style="color:red;"
                            >
                                <strong class="error">{{"share.validation.input_required"|trans }}</strong>
                                <br>
                            </span>
                        </div>

                        <div
                            class="col-md-6 col-lg-7"
                            ng-class="{'has-error' : formRoom.availability10.$invalid}"
                        >
                            <label class="tooltips tooltips-right" for="">
                            	{{"share.register.base_availability"|trans }}
                            	<i class="fa fn-info fa-x"></i>
								<span style="width: 100% !important;margin-left: 30px !important;">
									{{"share.register.base_availability_tooltip"|trans }}
								</span>
                            </label>
                            <input
                            	type="number"
                            	name="availability10"
                            	style="width:50%;"
                            	class="form-control my-imput"
                                ng-model="room.base_availability"
                                ng-min="0"
                                ng-max="{[{ basicQuota }]}"
                                ng-pattern="/^\d+$/"
                                equired/>
						  	<span ng-show="formRoom.availability10.$error.number" style="color:red;">
                                <strong class="error">{{"share.validation.only_number"|trans }}</strong>
                                <br>
                            </span>
                            <span ng-show="formRoom.availability10.$error.min" style="color:red;">
                                <strong class="error">{{"share.validation.enter_more_one"|trans }}</strong>
                                <br>
                            </span>
                            <span ng-show="formRoom.availability10.$error.pattern" style="color:red;">
	                            <strong class="error">{{"share.validation.only_integer"|trans }}</strong>
	                        	<br>
                       	 	</span>
                            <span ng-show="formRoom.availability10.$error.required" style="color:red;">
	                            <strong class="error">{{"share.validation.input_required"|trans }}</strong>
	                        	<br>
                            </span>
                        </div>

                    </div>
				</div>
			</div>
		</div>

		<!--Precios -->
		<div class="container form-font room-service" ng-if="room.typeRoom!=null">
			<div class="jumbotron form-font-top form-group panel-price-by-person">
				<h3>
					{{"share.register.price_politics"|trans }} -
					{[{rooms.TypeRoom[room.typeRoom].name}]}
					<span ng-if="room.subroom">- {[{subroom_name}]}</span>
				</h3>
				<hr>

				<div class="container">

					{#<div class="row sub-title">
						<div class="col-md-4 col-md-offset-1">
							<h4> ¿Con qué tarifas cargo precios? </h4>
							<span ng-if="rooms.rateType==2 && rooms.tax">{{ "extranet.message.sell_rate"|transchoice(1) }}</span>
							<span ng-if="rooms.rateType==2 && !rooms.tax">{{ "extranet.message.sell_rate"|transchoice(2) }}</span>
							<span ng-if="rooms.rateType==1 && rooms.tax">{{ "extranet.message.net_rate"|transchoice(1) }}</span>
							<span ng-if="rooms.rateType==1 && !rooms.tax">{{ "extranet.message.net_rate"|transchoice(2) }}</span>
						</div>
					</div>#}

					<div
						class="row"
						ng-if="room.numPeople>1">
						<div
							class="col-md-7 col-md-offset-1"
							ng-class="{'col-md-15' : !room.prices.incrementKid && room.prices.increment}"
							ng-show="rooms.acceptsChild">
							<h4>{{"ascribere.room.prices_change_by_number_kids"|trans }}</h4>
							{#<i class="fa fn-select pull-rigth"></i>#}
							{#<select#}
								{#class="form-control select-price"#}
								{#ng-model="room.prices.incrementKid"#}
								{#ng-options="boolToStr(item) for item in [true, false]"#}
								{#width="20%">#}
								{#<option value="">{{"share.message.select"|trans }}</option>#}
							{#</select>#}
							<md-switch
									ng-model="room.prices.incrementKid"
									aria-label="Switch 9"
									class="md-warn">
								<span ng-if="room.prices.incrementKid == true">
									{{ "share.message.yes"|trans }}
								</span>
								<span ng-if="room.prices.incrementKid == null || room.prices.incrementKid == false">
									{{ "share.message.no"|trans }}
								</span>
							</md-switch>
						</div>
						{# ¿Adultos y niños pagan el mismo precio? #}
						<div class="col-md-7 col-md-offset-1" ng-if="rooms.acceptsChild && room.prices.incrementKid">
							<h4>{{"ascribere.room.adults_and_children_pay_same"|trans }}</h4>
							{#<i class="fa fn-select pull-rigth"></i>#}
							{#<select#}
								{#class="form-control select-price"#}
								{#ng-model="room.prices.kidPayAsAdult"#}
								{#ng-options="boolToStr(item) for item in [true, false]">#}
								{#<option value="">{{"share.message.select"|trans }}</option>#}
							{#</select>#}
							<md-switch
									ng-model="room.prices.kidPayAsAdult"
									aria-label="Switch 10"
									class="md-warn">
								<span ng-if="room.prices.kidPayAsAdult == true">
									{{ "share.message.yes"|trans }}
								</span>
								<span ng-if="room.prices.kidPayAsAdult == null || room.prices.kidPayAsAdult == false">
									{{ "share.message.no"|trans }}
								</span>
							</md-switch>
						</div>

						{# ¿Tus precios cambian en función del número de adultos? #}
						{#<div#}
							{#ng-class="{'row' : !room.prices.kidPayAsAdult && room.prices.incrementKid && !room.prices.increment}">#}
						<div class="col-md-7 col-md-offset-1"
								ng-show="!rooms.acceptsChild || room.prices.kidPayAsAdult==false || room.prices.incrementKid==false">
							<h4 ng-if="room.prices.kidPayAsAdult || !rooms.acceptsChild">
								{{"ascribere.room.prices_change_by_number_people"|trans }}
							</h4>
							<h4 ng-if="!room.prices.kidPayAsAdult && rooms.acceptsChild">
								{{"ascribere.room.prices_change_by_number_adults"|trans }}
							</h4>
							{#<i class="fa fn-select pull-rigth"></i>#}
							{#<select#}
							{#class="form-control select-price"#}
							{#ng-model="room.prices.increment"#}
							{#ng-options="boolToStr(item) for item in [true, false]"#}
							{#width="20%">#}
							{#<option value="">{{"share.message.select"|trans }}</option>#}
							{#</select>#}
							<md-switch
									ng-model="room.prices.increment"
									aria-label="Switch 11"
									class="md-warn">
								<span ng-if="room.prices.increment == true">
									{{ "share.message.yes"|trans }}
								</span>
								<span ng-if="room.prices.increment == null || room.prices.increment == false">
									{{ "share.message.no"|trans }}
								</span>
							</md-switch>
						</div>
					</div>
					<div class="row">
							<div
								class="col-md-7 col-md-offset-1"
								ng-show="(room.prices.increment) || (room.prices.kidPayAsAdult)">

								{# ¿Cuál es el tipo de incremento? #}
								<div
									class="panel-increment"
									style="margin-left: 0;"
									ng-show="(room.prices.increment) || (room.prices.kidPayAsAdult)">
									<h4 ng-if="room.prices.kidPayAsAdult || !rooms.acceptsChild">
										{{"ascribere.room.type_increment_by_person"|trans }}
									</h4>
									<h4 ng-if="!room.prices.kidPayAsAdult && rooms.acceptsChild">
										{{"ascribere.room.type_increment_by_adult"|trans }}
									</h4>
									<div class="col-xs-8 type-increment">
										<h4>Tipo de incremento</h4>
									</div>
									<div class="col-xs-8 type-increment">
										<i class="fa fn-select pull-rigth"></i>
										<select
											class="form-control select-price"
											ng-model="room.prices.variationTypePeople"
											convert-to-number>
