                        <tr>
                            <td width="25%" style="padding-left: 14px;">
                                <span style="color:#572A85;font-size:13px"><span style="font-weight: bold">Adultos </span> {{ currentPack.numberAdults }}</span>
                            </td>
                            {% if not currentPack.numberChildren == 0 %}
                                <td width="35%">
                                    <span style="color:#572A85;font-size:13px"><span style="font-weight: bold">Niños </span> {{ currentPack.numberChildren }}</span>
                                </td>
                            {% endif %}
                        </tr>
                        {% if not currentPack.numberChildren == 0 %}
