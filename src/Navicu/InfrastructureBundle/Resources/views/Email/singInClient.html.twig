{% extends "NavicuInfrastructureBundle:Email:layout.html.twig" %}

{% block body %}

<!-- header -->
<table border="0" cellpadding="0" cellspacing="0" width="600"  align="left">
    <!-- HEADER ROW // -->
    <tr>
        <td align="center" valign="top">
            <!-- CENTERING TABLE // -->
            <table border="0" cellpadding="0" cellspacing="0" width="100%">

                <td style="padding-left:10px;padding-top: 18px;padding-bottom: 18px">
                    <img src="https://www.navicu.com/images/logo-correo-contrasena.png" style="width:200px;">
                </td>
            </table>
        </td>
    </tr>

    <tr>
        <td>
            <table  border="0" cellpadding="0" cellspacing="0" width="600" id="emailBody" style="background-color: #F2F2F2" >
                <tr>
                    <td style="padding-left: 10px;padding-top: 12px">
                        <span style="font-size: 18px;font-weight: bold;color: #773CBE">{{ fullName }}, ¡gracias por registrarte en <span style="font-size: 18px;font-weight: bold;bgcolor: #773CBE !important;text-decoration: none !important;"> navicu.com!</span></span>
                    </td>
                </tr>
                <tr>
                    <td style="padding-left: 10px;padding-top: 12px;padding-right: 10px;">
                        {% if generatedPassword is defined and generatedPassword == true %}
                            <span style="font-weight: bold;color:#4D4D4D">Te hemos asignado una contraseña provisional para que puedas <br>ingresar a tu perfil de usuario</span>
                        {% else %}
                            <span style="font-weight: bold;color:#4D4D4D">Disfruta de lo mejor de Venezuela al mejor precio garantizado</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td style="padding-left: 10px;">
                        {% if generatedPassword is defined and generatedPassword == true %}
                            <span style="font-weight: bold;font-size: 12px;color:#808080">Podrás modificar tu contraseña provisional en cualquier momento</span>
                        {% else %}
                            <span style="font-weight: bold;font-size: 12px;color:#808080">navicu.com, reserva de alojamientos online</span>
                        {% endif %}
                    </td>
                </tr>
            </table>
            <table  border="0" cellpadding="0" cellspacing="0" width="600"  align="center" style="background-color: #F2F2F2">
                <tr>
                    <td></td>
                    <td style="border-bottom: 1px solid #E6E6E6;width: 584px !important;text-align: left !important;" align="left">&nbsp;</td>
                    <td></td>
                </tr>
            </table>
            {% if generatedPassword is defined and generatedPassword == true %}
                <table  border="0" cellpadding="0" cellspacing="0" width="600" id="emailBody" style="background-color: #F2F2F2" >
                    <tr>
                        <td style="padding-left: 10px;padding-top: 12px;padding-bottom: 10px;">
                            <span style="color:#572A85;font-size: 15px;font-weight: bold">Tu contraseña provisional</span> <span style="color:#AA196E;font-size: 15px;font-weight: bold">{{ password }}</span>
                        </td>
                    </tr>
                </table>
            {% else %}
                <br>
            {% endif %}
            <table  border="0" cellpadding="0" cellspacing="0" width="600" id="emailBody" style="background-color: white" >
                <tr>
                    <td style="text-align: right;padding-right: 10px;padding-top: 10px !important;">
                        <span style="font-size: 12px !important;color:#572A85;font-weight: bold;">¿Tienes alguna duda?</span>
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;padding-right: 10px;padding-bottom: 10px !important;">
                        <span style="font-size: 12px !important;color: #4D4D4D">Escríbenos a preguntas@navicu.com</span>
                    </td>
                </tr>
                <tr style="line-height: 0px">
                    <td align="left" valign="top">
                        <img src="https://www.navicu.com/images/navicu/email_corporate_line.png" style="width: 600px !important;" width="600px">
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    </table>


</table>



{% endblock body %}