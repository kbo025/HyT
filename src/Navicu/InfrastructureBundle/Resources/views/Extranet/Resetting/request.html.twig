{% extends "NavicuInfrastructureBundle:Extranet/Resetting:layoutResetting.html.twig" %}

{% block content_title %}
    
{% endblock content_title %}

{% block  content_form %}

    <div id="carousel" class="carousel carousel-extranet carousel-fade" data-ride="carousel">
        <div class="carousel-inner carousel-inner-hotel">
            <div class="item active">
                <div class="carousel-fill" style="background-image:url('/images/images_original/navicu/homepage/login1.jpg');"></div>
                <h1 style="margin-left:12%; margin-top:-63px; color:#fff; font-size:15px;">
                    <span style="font-family:Lato-Regular; font-style:italic;">Parque Nacional Laguna de Tacarigua, Estado Miranda, Venezuela</span>
                <h1>
            </div>
            <div class="item">
                <div class="carousel-fill" style="background-image:url('/images/images_original/navicu/homepage/login2.jpg');"></div>
                <h1 style="margin-left:12%; margin-top:-63px; color:#fff; font-size:15px;">
                    <span style="font-family:Lato-Regular; font-style:italic;">Cerro Wichuj, Estado Amazonas, Venezuela</span>
                <h1>
            </div>
            <div class="item">
                <div class="carousel-fill" style="background-image:url('/images/images_original/navicu/homepage/login3.jpg');"></div>
                <h1 style="margin-left:12%; margin-top:-63px; color:#fff; font-size:15px;">
                    <span style="font-family:Lato-Regular; font-style:italic;">Medanos de Coro, Estado Falc√≥n, Venezuela</span>
                <h1>
            </div>
        </div>
        <div class="container">
            <form action="{{ path('navicu_extranet_resetting_send_email') }}" method="POST" class="form-reset fos_user_resetting_request"
             style="width:350px;">
            <h5 class="form-extranet-heading" style="width: 330px;"><b>{{ "share.message.resetting_your_password"|trans }}</h5>
                {% if invalid_username is defined %}
                    <div class="alert alert-danger">
                        <span class="fa fa-exclamation-triangle" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        <span>{{ 'share.message.resetting.invalid_username'|trans({'%username%': invalid_username}) }}</span>
                    </div>
                {% endif %}
                <label for="password" class="sr-only">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                <input type="text" id="username" name="username" class="form-control my-input" required="required" placeholder="{{ 'share.message.username_email'|trans }}"/>
                <br>
                <button type="submit" id="_submit" name="_submit" class="btn btn-md btn-primary btn-reset" >{{ 'share.message.resetting_send_email'|trans }}</button>
                <div class="pull-left btn-back" >
                    <a href="{{path('navicu_extranet_security_login')}}"  style="color:#3A2368!important; text-decoration:none;">
                        <center><b>{{ 'share.action.go_back'|trans }}</b></center>
                    </a>
                </div>
            </form>
        </div>
    </div>

{% endblock content_form %}

{% block content_buttons %}


{% endblock content_buttons %}
