{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <div class="alert alert-danger">
            	{% for error in errors %}
                	<span class="fa fa-exclamation-triangle" aria-hidden="true"></span>
                		<span class="sr-only">Error:</span>
                		<span> 	{{ error.message|trans }}</span>
                {% endfor %}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}