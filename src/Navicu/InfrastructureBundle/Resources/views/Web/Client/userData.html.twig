                            </div>
                        </div>
                        <div class="nvc-row">
                            <div class="col-xs-8">
                                <label>{{"word.country"|trans }} *</label>
                                <select 
                                    name="country"
                                    ng-model="form.country" 
                                    ng-options="val.id as val.title for (country, val) in countries" 
                                    required>
                                    <option value="">Seleccione</option>
                                </select>
                                <span
