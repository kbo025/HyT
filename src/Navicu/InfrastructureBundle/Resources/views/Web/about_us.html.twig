            </div>
        </div>
    </section>
    <section class="nvc-about_us__tips visible-md">
        <div class="nvc-container">
            <div class="col-xs-4 col-sm-2" style="margin-bottom:5%;">
                <img  class="img-responsive" src="{{ asset('images/about_us/pasos.png') }}"/>
            </div>
            <div class="col-xs-4 col-sm-6" style="margin-left:-5%; margin-bottom:5%;">
                <h4>{{"web.about_us.reserve_in_four_steps"|trans }}</h4>
                <p>{{"web.about_us.search_the_destination_you_prefer"|trans }}</p>
            </div>
            <div class="col-xs-4 col-sm-2" style="margin-left:6%; margin-bottom:5%;">
