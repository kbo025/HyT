                <h4 style="margin-top:-50px; margin-left:20%;">{{"web.about_us.reliable_and_secure_payment"|trans }}</h4>
                <p style="margin-left:20%;">{{"web.about_us.confirmed_reservation"|trans }}</p>
            </div>
        </div>
    </section>

</main>

{% endblock body %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
