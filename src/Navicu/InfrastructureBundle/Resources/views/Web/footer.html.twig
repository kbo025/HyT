                <p style="margin-top: 10px;"><a href="{{ path('navicu_terms') }}">{{"web.footer.terms"|trans}}</a></p>
                <p><a href="{{ path('navicu_faq') }}">{{"web.footer.faq"|trans}}</a></p>
