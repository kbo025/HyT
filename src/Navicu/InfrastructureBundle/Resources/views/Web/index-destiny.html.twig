                                                class="nvc-button nvc-button__search ng-binding"
                                                id="nvc-aavv-customize__button--primary"
                                                tabindex="7"
                                                type="submit"
                                                disabled="disabled"> Buscar
                                            </button>
                                        </div>
                                    </div>
                                    <!-- Directiva Búsqueda de Hoteles -->
                                    <section ng-show="flightSearch===false">
                                        <nvc-search-destinations
                                            route="navicu_asinc_search_destiny_by_autocompleted"
                                            selected-option="selectedDestiny"
                                            callback="redirectUrl"

                                            adults="adults"
                                            children="kids"
                                            end-date="checkOut"
                                            rooms="rooms"
                                            start-date="checkIn"
                                            calendar-image-url="{{ asset('images/calendar.png') }}"
                                        ></nvc-search-destinations>
                                    </section>
                                    <!-- Directiva Búsqueda de Vuelos -->
                                    <section ng-show="flightSearch===true">
                                        <nvc-search-flight
                                            route="navicu_flight_search_autocompleted"
                                            selected-origin="selectedFrom"
                                            selected-destiny="selectedTo"
                                            callback="redirectFlight"

                                            adults="adults"
                                            children="kids"
                                            end-date="checkOut"
                                            start-date="checkIn"
                                            calendar-image-url="{{ asset('images/calendar.png') }}"
                                            trip="roundTrip"
                                        ></nvc-search-flight>
                                    </section>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <h3 class="youtube hidden-xs" ng-if="backgroundMode==0">
                <a href="https://www.youtube.com/channel/UCgusN-AvP1nas0qnPji7cLA" target="_blank">
                    Visita nuestro canal
                    <i class="fa fn-youtube"></i>
                </a>
            </h3>
            {#<div class="nvc-carousel__fill visible-xs" style="background-image: url({{ assets.img['images/home/carousel/movil/reserva-de-hoteles-venezuela.png'] }})" data-ng-style="slideStyles[slideStyles.length-1]"></div>#}
