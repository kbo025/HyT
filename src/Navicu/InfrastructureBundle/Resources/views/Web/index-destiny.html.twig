                            <div style="padding-left:5px;">
                                <i data-ng-if="item.stars>=1" class="fa fa-star"></i>
                                <i data-ng-if="item.stars>=2" class="fa fa-star"></i>
                                <i data-ng-if="item.stars>=3" class="fa fa-star"></i>
                                <i data-ng-if="item.stars>=4" class="fa fa-star"></i>
                                <i data-ng-if="item.stars==5" class="fa fa-star"></i>
                            </div>
                            <hr>
                            <h3>{[{item.name}]} · {[{item.location}]} </h3>
                            <h4 ng-if="item.price===null">Desde - </h4>
                            <h4 ng-if="item.promotion===false && item.price!==null">Desde {[{item.currency}]} {[{item.price | number }]}</h4>
                            <h4 ng-if="item.promotion===true">PROMOCIÓN ESPECIAL</h4>
                            <i class="fa fn-arrow-right"></i>
                        </div>
                        <div class="visible-xs" style="background-color: #fff;">
                            <h3>{[{item.name}]} · {[{item.location}]} </h3>
                            <h4 ng-if="item.price===null">Desde - </h4>
                            <h4 ng-if="item.promotion===false && item.price!==null">Desde {[{item.currency}]} {[{item.price | number }]}</h4>
                            <h4 ng-if="item.promotion===true">PROMOCIÓN ESPECIAL</h4>
                            <i class="fa fn-arrow-right"></i>
                        </div>
                    </a>
                </div>
            </div>
        </section>

