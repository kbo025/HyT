            <div class="nvc-home-destiny__video-background hidden-xs" ng-if="backgroundMode==0">
                <video  id="videoBackgroundHome" preload loop muted autoplay>
                    <source src="{{ asset('video/videoBackgroundHome.mp4') }}" type="video/mp4">
