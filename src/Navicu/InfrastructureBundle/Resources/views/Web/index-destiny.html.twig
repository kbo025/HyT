                                    method="get"
                                    role="form"
                                >
                                    <input type="hidden" name="adult" value="{[{ adults }]}" data-ng-if="adults != 2"/>
                                    <input type="hidden" name="kid" value="{[{ kids }]}" data-ng-if="kids != 0"/>
                                    <input type="hidden" name="room" value="{[{ rooms }]}" data-ng-if="rooms != 1"/>
                                    <input type="hidden" name="startDate" value="{[{ checkIn }]}" data-ng-if="checkIn"/>
                                    <input type="hidden" name="endDate" value="{[{ checkOut }]}" data-ng-if="checkOut && flightSearch===false"/>
                                    <input type="hidden" name="endDate" value="{[{ checkOut }]}" data-ng-if="checkOut && flightSearch===true && roundTrip===true"/>
                                    <input type="hidden" name="flightSearch" value="{[{ flightSearch }]}"/>
                                    <input type="hidden" name="roundTrip" value="{[{ 1 }]}" data-ng-if="flightSearch===true && roundTrip===true"/>
                                    <input type="hidden" name="roundTrip" value="{[{ 0 }]}" data-ng-if="flightSearch===true && roundTrip===false"/>
                                    <!-- Barra de búsqueda que se muestra mientras carga angular -->
                                    <div class="nvc-search--destinations" ng-if="false">
                                        <div
                                            class="nvc-search__input-container"
                                            ng-class="{'nvc-loading': isBusy}"
                                        >
                                            <input
                                                class="nvc-search__input--suggestion"
                                                placeholder="Escoge tu destino, región o ciudad"
                                                type="text"
                                                id="suggestedValue"
                                            >
                                        </div>
                                        <div
                                            class="nvc-search__input--date-start"
                                        >
                                            <img src="{{ asset('images/calendar.png') }}" class="pull-left">
                                            <input
                                                autocomplete="off"
                                                placeholder="Fecha inicio"
                                                tabindex="2"
                                                class="ng-pristine ng-untouched ng-valid"
                                                type="text"
                                                id="startDate"
                                            >
                                        </div>
                                        <div
                                            class="nvc-search__input--date-end"
                                        >
                                            <img src="{{ asset('images/calendar.png') }}" class="pull-left">
                                            <input
                                                autocomplete="off"
                                                placeholder="Fecha final"
                                                tabindex="3"
                                                class="ng-pristine ng-untouched ng-valid"
                                                type="text"
                                                id="endDate"
                                            >
                                        </div>
                                        <div
                                            class="nvc-search__select--rooms"
                                        >
                                            <select
                                                tabindex="4"
                                                class="ng-pristine ng-untouched ng-valid"
                                                id="rooms"
                                            >
                                            </select>
                                        </div>
                                        <div
                                            class="nvc-search__select--adults"
                                        >
                                            <select
                                                tabindex="5"
                                                class="ng-pristine ng-valid ng-touched"
                                                id="adults"
                                            >
                                            </select>
                                        </div>
                                        <div
                                            class="nvc-search__select--children"
                                        >
                                            <select
                                                tabindex="6"
                                                class="ng-pristine ng-untouched ng-valid"
                                                id="children"
                                            >
                                            </select>
                                        </div>
