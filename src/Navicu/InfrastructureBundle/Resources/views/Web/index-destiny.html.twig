                                        <li style="margin-left:8px;">
                                        </li>
                                        <li>
                                        </li>
                                    </ul>
                                    <ul class="buttons">
                                        <li class="active">
                                            <a
                                                href=""
                                                class="active"
                                            >
                                                <img src="{{ asset('images/hotel.png') }}" class="pull-left">
                                                Hoteles
                                            </a>
                                        </li>
                                        <li>
                                            <a
