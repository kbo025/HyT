                        </li>
                    </ul>
                </section>
            </div>
        </section>

        <!-- Map and destination Desktop-Tablet -->
        <section class="nvc-home-map hidden-xs">
            <div id="nvc-wrapper" class="nvc-row" style="display:flex;">
                <!-- Manual search -->
                <div id="mapHomeDestiny" class="col-sm-6 col-md-4 nvc-wrapper__nav">
                    <div id="nvc-wrapper__sidebar">
                        <div class="nvc-row nvc-panel__search" ng-class="{active: showMapDestinationSearch===true}">
                            <!-- Logo -->
                            <nav class="hidden-xs" ng-cloak>
                                <ul class="buttons">
                                    <li
                                            ng-class="{active: showMapDestinationSearch===true}"
                                            ng-click="showMapDestinationSearchBox();"
                                    >
                                        <a
                                                href=""
                                                ng-class="{active: showMapDestinationSearch===true}"
                                                ng-click="showMapDestinationSearchBox();"
                                        >
                                            <img src="{{ asset('images/hotel.png') }}" class="pull-left">
                                            Hoteles
                                        </a>
                                    </li>
                                    {#
                                    <li
                                            ng-class="{active: showMapDestinationSearch===false}"
                                            ng-click="showMapFlightSearchBox();"
                                    >
                                        <a
                                                href=""
                                                ng-class="{active: showMapDestinationSearch===false}"
