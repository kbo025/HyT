                                            <option value="1"> 1 {{ "share.message.child"|transchoice(1) }}</option>
                                            <option data-ng-repeat="n in [] | range:2:8" value="{[{n}]}">
                                                {[{n}]} {{ "share.message.child"|transchoice(2) }}
                                            </option>
                                        </select>
                                    </div>

                                    <!-- Boton Buscar -->
                                        <div class="col-sm-16 button-wrapper">
